<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MyProfile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo_arrow"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textColor="#FFF"
                    android:textSize="17dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:text="Profile "
                    />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="120dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:id="@+id/prfilee"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prsonn"
        android:layout_height="120dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        app:civ_border_width="2dp"
        android:id="@+id/edittt"
        android:layout_marginRight="15dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:src="@drawable/editt"/>
</RelativeLayout>

        <TextView
android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="First Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
android:id="@+id/namee"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="Last Name (Optional)"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
                android:enabled="false"
                android:id="@+id/lastnameet"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="Mobie Number"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
android:id="@+id/mobule"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="Date of Birth (Optional)"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
                android:id="@+id/dobb"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/profilebutton">

            <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/radioGroup"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16sp"

                    android:layout_height="wrap_content"
                    android:text="Gender"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/male"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content"
                    android:text="Male"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/fmale"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content"
                    android:text="Female"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/transegender"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content"
                    android:text="Transgender"/>
            </RadioGroup>
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="Anniversary Date"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
                android:id="@+id/anii"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/selectcity_lineardrop"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "5dp"
            android:background = "@drawable/profilebutton"
            android:padding = "8dp">

            <Spinner
                android:id = "@+id/UR_spinner_city"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:dropDownVerticalOffset = "40dp"
                android:dropDownSelector = "@color/white"
                android:spinnerMode = "dropdown"
                android:textColor = "@color/colorPrimary" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/selectarea_lineardrop"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "5dp"
            android:background = "@drawable/profilebutton"
            android:padding = "8dp">

            <Spinner
                android:id = "@+id/UR_spinner_area"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:dropDownVerticalOffset = "40dp"
                android:dropDownSelector = "@color/white"
                android:spinnerMode = "dropdown"
                android:textColor = "@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/profilebutton">


            <EditText
                android:id="@+id/userdiss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:visibility="gone"
                android:paddingStart="5dp"

                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint="Enter Your District Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="Gender"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
                android:id="@+id/gendrrr"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"

            android:paddingStart="5dp"

            android:backgroundTint="@color/white"

            android:drawableTint="@color/white"

            android:hint="District"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profilebutton">


            <EditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:paddingStart="5dp"
                android:id="@+id/district"
                android:enabled="false"
                android:backgroundTint="@color/white"

                android:drawableTint="@color/white"

                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>



<Button
    android:layout_width="200dp"
    android:padding="8dp"
android:id="@+id/updatee"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:background="@drawable/btn_rounded_accent"
    android:layout_height="wrap_content"
    android:text="Update Details"/>
    </LinearLayout>



</LinearLayout>
</androidx.core.widget.NestedScrollView>